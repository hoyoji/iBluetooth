                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                hyj:falseText="@string/memberFormFragment_sharePercentageType_fixed"
                hyj:trueText="@string/memberFormFragment_sharePercentageType_average" />
        </LinearLayout>

        <View
