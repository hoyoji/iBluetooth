<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hyj="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".FindPasswordFragment" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/findpasswordFragment_textView_username"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.8"
            android:gravity="center_vertical"
            android:text="@string/findpasswordFragment_textView_username" />

        <EditText
            android:id="@+id/findpasswordFragment_editText_username"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="2.2"
            android:gravity="center_vertical|right" 
            android:hint="@string/findpasswordFragment_editText_hint_username" 
                android:maxLines="1"
                android:singleLine="true">

            <requestFocus />
        </EditText>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/findpasswordFragment_textView_email"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.8"
            android:gravity="center_vertical"
            android:text="@string/findpasswordFragment_textView_email" />

        <EditText
            android:id="@+id/findpasswordFragment_editText_email"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="2.2"
            android:gravity="center_vertical|right"
            android:hint="@string/findpasswordFragment_editText_hint_email"
                android:maxLines="1"
                android:singleLine="true">

            <requestFocus />
        </EditText>

    </LinearLayout>

    <Button
        android:id="@+id/findpasswordFragment_button_getverificationCode"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/findpasswordFragment_button_getverificationCode" />
    
    <LinearLayout
	    android:id="@+id/findpasswordFragment_linearLayout_verificationCode"
	    android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_marginTop="30dp">
		<LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" >
	
	        <TextView
	            android:id="@+id/findpasswordFragment_textView_verificationCode"
	            android:layout_width="0dip"
	            android:layout_height="fill_parent"
	            android:layout_weight="0.8"
	            android:gravity="center_vertical"
	            android:text="@string/findpasswordFragment_textView_verificationCode" />
	
	        <EditText
	            android:id="@+id/findpasswordFragment_editText_verificationCode"
	            android:layout_width="0dip"
	            android:layout_height="fill_parent"
	            android:layout_weight="2.2"
	            android:gravity="center_vertical|right"
		    	android:ellipsize="start"
	            android:hint="@string/findpasswordFragment_editText_hint_verificationCode" 
	                android:maxLines="1"
	                android:singleLine="true">
	        </EditText>
	
	    </LinearLayout>
	    
		<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/findpasswordFragment_textView_newPassword1"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.8"
            android:gravity="center_vertical"
            android:text="@string/findpasswordFragment_textView_newPassword1" />

        <EditText
            android:id="@+id/findpasswordFragment_editText_newPassword1"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="2.2"
            android:gravity="center_vertical|right" 
	    	android:inputType="textPassword"
	    	android:ellipsize="start"
            android:hint="@string/findpasswordFragment_editText_hint_newPassword1" 
                android:maxLines="1"
                android:singleLine="true">
        </EditText>

	    </LinearLayout>
		<LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" >
	
	        <TextView
	            android:id="@+id/findpasswordFragment_textView_newPassword2"
	            android:layout_width="0dip"
	            android:layout_height="fill_parent"
	            android:layout_weight="0.8"
	            android:gravity="center_vertical"
	            android:text="@string/findpasswordFragment_textView_newPassword2" />
	
	        <EditText
	            android:id="@+id/findpasswordFragment_editText_newPassword2"
	            android:layout_width="0dip"
	            android:layout_height="fill_parent"
	            android:layout_weight="2.2"
	            android:gravity="center_vertical|right"
		    	android:inputType="textPassword" 
		    	android:ellipsize="start"
	            android:hint="@string/findpasswordFragment_editText_hint_newPassword2" 
	        	android:imeOptions="actionDone" 
	                android:maxLines="1"
	                android:singleLine="true">
	        </EditText>
	
	    </LinearLayout>
	
		<Button
		    android:id="@+id/findpasswordFragment_button_submit"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:text="@string/findpasswordFragment_button_submit"/>
	</LinearLayout>
    
	
</LinearLayout>
