<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
 	xmlns:hyj="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ProjectMessageFormFragment" >
    
    <com.hoyoji.android.hyjframework.view.HyjDateTimeField 
            android:id="@+id/projectMessageFormFragment_editText_date"
		    android:layout_width="fill_parent"
		    android:layout_height="43dp" 
            hyj:labelText="@string/projectMessageFormFragment_textView_date_send"
     />    

    <View 
    android:id="@id/field_separator"
    android:layout_width="match_parent"
    android:layout_height="1dip"
	android:layout_marginTop="5dip"
	android:layout_marginBottom="5dip"
    android:background="@drawable/line_divider" 
    />
    
     <com.hoyoji.android.hyjframework.view.HyjTextField 
            android:id="@+id/projectMessageFormFragment_editText_toUser"
		    android:layout_width="fill_parent"
		    android:layout_height="43dp" 
            hyj:labelText="@string/projectMessageFormFragment_textView_toUser"
            hyj:hintText="@string/projectMessageFormFragment_editText_hint_toUser"
        />    

    <View 
    android:id="@id/field_separator"
    android:layout_width="match_parent"
    android:layout_height="1dip"
	android:layout_marginTop="5dip"
	android:layout_marginBottom="20dip"
    android:background="@drawable/line_divider" 
    />

       <com.hoyoji.android.hyjframework.view.HyjTextField
          android:id="@+id/projectMessageFormFragment_editText_title"
          hyj:style="no_label"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
		  android:layout_marginBottom="10dip"
          hyj:labelText="@string/projectMessageFormFragment_textView_title"
          hyj:hintText="@string/projectMessageFormFragment_editText_hint_title" />
   
    
      <com.hoyoji.android.hyjframework.view.HyjRemarkField
          android:id="@+id/projectMessageFormFragment_editText_detail"
          hyj:style="no_label"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          hyj:hintText="@string/projectMessageFormFragment_editText_hint_detail"
          hyj:labelText="@string/projectMessageFormFragment_textView_detail" />

        <View 
        android:id="@id/field_separator"
        android:layout_width="match_parent"
        android:layout_height="1dip"
    	android:layout_marginTop="20dip"
    	android:layout_marginBottom="20dip"
        android:background="@drawable/line_divider" 
        />
   
    
	<Button
	    android:id="@id/button_save"
            android:background="@drawable/button_rectangle"     
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"/>
	
</LinearLayout>
