<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hyj="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MoneyDepositReturnContainerFormFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.hoyoji.android.hyjframework.view.HyjImageField
            android:id="@+id/moneyDepositReturnContainerFormFragment_imageField_picture"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/moneyDepositReturnContainerFormFragment_imageView_camera"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_action_new_picture_white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:orientation="vertical"
                android:paddingLeft="66dp" >
                
				<FrameLayout
				    android:layout_width="match_parent"
                	android:layout_height="wrap_content">

	                <com.hoyoji.android.hyjframework.view.HyjNumericField
	                    android:id="@+id/moneyDepositReturnContainerFormFragment_textField_amount"
	                    hyj:style="no_label"
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_marginRight="40dp"
	                    android:layout_gravity="center_vertical"
	                    hyj:editTextBold="true"
	                    hyj:editTextBorder="none"
	                    hyj:hintText="@string/moneyDepositReturnContainerFormFragment_editText_hint_amount"
	                    hyj:labelText="@string/moneyDepositReturnContainerFormFragment_textView_amount" >
						<requestFocus />
	                </com.hoyoji.android.hyjframework.view.HyjNumericField>
	                <ImageButton android:id="@+id/calculator"
	                    android:layout_width="25dp"
	                    android:layout_height="25dp"
	                    android:layout_gravity="right|center_vertical"
	                    android:background="@drawable/calculator"/>
                </FrameLayout>
                
                <View
                    android:id="@id/field_separator"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginBottom="5dip"
                    android:layout_marginTop="5dip"
                    android:background="@drawable/line_divider" />

                <com.hoyoji.android.hyjframework.view.HyjDateTimeField
                    android:id="@+id/moneyDepositReturnContainerFormFragment_textField_date"
                    hyj:style="no_label"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    hyj:editTextBorder="none"
                    hyj:hintText="@string/moneyDepositReturnContainerFormFragment_editText_hint_date"
                    hyj:labelText="@string/moneyDepositReturnContainerFormFragment_textView_date" />
                
            </LinearLayout>
        </FrameLayout>

         <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/line_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical" >

                <com.hoyoji.android.hyjframework.view.HyjSelectorField
                    android:id="@+id/moneyDepositReturnContainerFormFragment_selectorField_moneyAccount"
                    hyj:style="top_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    hyj:editTextBorder="none"
                    hyj:hintText="@string/moneyDepositReturnContainerFormFragment_editText_hint_moneyAccount"
                    hyj:labelText="@string/moneyDepositReturnContainerFormFragment_textView_moneyAccount" />

                <View
                    android:id="@+id/moneyDepositReturnContainerFormFragment_separatorField_moneyAccount"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginBottom="5dip"
                    android:layout_marginTop="5dip"
                    android:background="@drawable/line_divider" />

                <com.hoyoji.android.hyjframework.view.HyjSelectorField
                    android:id="@+id/moneyDepositReturnContainerFormFragment_selectorField_project"
                    hyj:style="top_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    hyj:editTextBorder="none"
                    hyj:hintText="@string/moneyDepositReturnContainerFormFragment_editText_hint_project"
                    hyj:labelText="@string/moneyDepositReturnContainerFormFragment_textView_project" />
            </LinearLayout>

            <View
                android:id="@+id/moneyDepositReturnContainerFormFragment_separatorField_exchange"
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dip"
                android:background="@drawable/line_divider" />

            <LinearLayout
                android:id="@+id/moneyDepositReturnContainerFormFragment_linearLayout_exchangeRate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical" >

                <com.hoyoji.android.hyjframework.view.HyjNumericField
                    android:id="@+id/moneyDepositReturnContainerFormFragment_textField_exchangeRate"
                    hyj:style="top_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    hyj:editTextBorder="none"
                    hyj:hintText="@string/moneyDepositReturnContainerFormFragment_editText_hint_exchangeRate"
                    hyj:labelText="@string/moneyDepositReturnContainerFormFragment_textView_exchangeRate" />

                <ImageView
                    android:id="@+id/moneyDepositReturnContainerFormFragment_imageButton_refresh_exchangeRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_action_refresh_rotate" />
            </LinearLayout>
        </LinearLayout>
        
        <View
            android:id="@+id/field_separator_event"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:visibility="gone"
            android:background="@drawable/line_divider" />
        
        <com.hoyoji.android.hyjframework.view.HyjSelectorField
            android:id="@+id/moneyExpenseContainerFormFragment_selectorField_event"
            hyj:style="top_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            hyj:hintText="@string/moneyExpenseFormFragment_editText_hint_event"
            hyj:labelText="@string/moneyExpenseFormFragment_textView_event" />

        <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/line_divider" />
        
          <FrameLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView 
            android:id="@+id/moneyDepositReturnContainerFormFragment_apportionField_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/moneyDepositReturnContainerFormFragment_moneyApportionField_title">
            </TextView>
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/moneyDepositReturnContainerFormFragment_imageButton_apportion_add_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_action_add_group" />
                
                <ImageView
                    android:id="@+id/moneyDepositReturnContainerFormFragment_imageButton_apportion_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_action_add_person" />
                
                <ImageView
                    android:id="@+id/moneyDepositReturnContainerFormFragment_imageButton_apportion_more_actions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_action_overflow" />

            </LinearLayout>
        </FrameLayout>
        
           <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="2dip"
            android:layout_marginTop="2dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="20dip"
            android:background="@drawable/line_divider" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:id="@+id/editText"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="@color/gray"
                android:text="请选择收款成员"/>
            <com.hoyoji.hoyoji.money.MoneyApportionField
                android:id="@+id/moneyDepositReturnContainerFormFragment_apportionField"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginBottom="5dip"/>
        </FrameLayout>
        
        <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/line_divider" />
        
        <ImageButton
            android:id="@id/expand_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_action_expand" />

        <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/line_divider" />
        
        <LinearLayout 
            android:id="@+id/moneyExpenseFormFragment_expandMore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

         <com.hoyoji.android.hyjframework.view.HyjSelectorField
               android:id="@+id/projectFormFragment_selectorField_financialOwner"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               hyj:style="top_label"
               hyj:hintText="@string/projectFormFragment_editText_hint_financialOwner"
               hyj:labelText="@string/projectFormFragment_textView_financialOwner" >
           </com.hoyoji.android.hyjframework.view.HyjSelectorField>
           
         <TextView
	        android:id="@+id/projectFormFragment_textView_hint_financialOwner"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/projectFormFragment_textView_hint_financialOwner"
	        android:gravity="center"
	        android:textSize="12sp"
	        android:padding="5dp"
		    android:singleLine="true"
		    android:ellipsize="end"
	        android:background="@color/hoyoji_lightgray"
	        android:textColor="@color/gray" />
        
        <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/line_divider" />

        <com.hoyoji.android.hyjframework.view.HyjRemarkField
            android:id="@+id/moneyDepositReturnContainerFormFragment_textField_remark"
            hyj:style="top_label"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            hyj:editTextBorder="none"
            hyj:hintText="@string/moneyDepositReturnContainerFormFragment_editText_hint_remark"
            hyj:labelText="@string/moneyDepositReturnContainerFormFragment_textView_remark" />
        
           
        <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/line_divider" />
        
        </LinearLayout>
        
        <Button
            android:id="@id/button_save"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_rectangle"     
            android:text="@string/app_action_save" />
        
        <Button
            android:id="@id/button_delete"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_rectangle"     
            android:text="@string/app_action_delete"
            android:textColor="@color/hoyoji_red" />
    </LinearLayout>

</ScrollView>