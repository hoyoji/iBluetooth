<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hyj="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ChangePasswordFragment" >

    <com.hoyoji.android.hyjframework.view.HyjTextField
        android:id="@+id/bindPhoneFragment_textField_phone"
        android:layout_width="fill_parent"
        android:layout_height="43dp"
        hyj:hintText="@string/bindPhoneFragment_editText_hint_phone"
        hyj:labelText="@string/bindPhoneFragment_textView_phone" />
    
      <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/line_divider" />
    

    <Button
        android:id="@+id/bindPhoneFragment_button_sendAuthCode"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/bindPhoneFragment_button_sendAuthCode" />
    
    <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/line_divider" />
    

    <com.hoyoji.android.hyjframework.view.HyjTextField
        android:id="@+id/bindPhoneFragment_textField_authCode"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        hyj:hintText="@string/bindPhoneFragment_editText_hint_authCode"
        hyj:labelText="@string/bindPhoneFragment_textView_authCode" />
    
    <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/line_divider" />
    

    <Button
        android:id="@+id/bindPhoneFragment_button_submit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/bindPhoneFragment_button_bind" />

</LinearLayout>