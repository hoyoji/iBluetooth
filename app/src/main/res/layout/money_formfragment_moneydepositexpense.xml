<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hyj="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MoneyDepositExpenseContainerFormFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.hoyoji.android.hyjframework.view.HyjImageField
            android:id="@+id/moneyDepositExpenseFormFragment_imageField_picture"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:layout_marginBottom="5dip"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/moneyDepositExpenseFormFragment_imageView_camera"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_action_new_picture_white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:orientation="vertical"
                android:paddingLeft="66dp" >
				<FrameLayout
				    android:layout_width="match_parent"
                	android:layout_height="wrap_content">

	                <com.hoyoji.android.hyjframework.view.HyjNumericField
	                    android:id="@+id/moneyDepositExpenseFormFragment_textField_amount"
	                    hyj:style="no_label"
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_marginRight="40dp"
	                    android:layout_gravity="center_vertical"
	                    hyj:editTextBold="true"
	                    hyj:editTextBorder="none"
	                    hyj:hintText="@string/moneyDepositExpenseFormFragment_editText_hint_amount"
	                    hyj:labelText="@string/moneyDepositExpenseFormFragment_textView_amount" >
						<requestFocus />
	                </com.hoyoji.android.hyjframework.view.HyjNumericField>
	                <ImageButton android:id="@+id/calculator"
	                    android:layout_width="25dp"
	                    android:layout_height="25dp"
	                    android:layout_gravity="right|center_vertical"
	                    android:background="@drawable/calculator"/>
                </FrameLayout>

                <View
                    android:id="@id/field_separator"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginBottom="5dip"
                    android:layout_marginTop="5dip"
                    android:background="@drawable/line_divider" />
                <com.hoyoji.android.hyjframework.view.HyjDateTimeField
                    android:id="@+id/moneyDepositExpenseFormFragment_textField_date"
                    hyj:style="no_label"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    hyj:editTextBorder="none"
                    hyj:hintText="@string/moneyDepositExpenseFormFragment_editText_hint_date"
                    hyj:labelText="@string/moneyDepositExpenseFormFragment_textView_date" />
            </LinearLayout>
        </FrameLayout>

        <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/line_divider" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical" >

                <com.hoyoji.android.hyjframework.view.HyjSelectorField
                    android:id="@+id/moneyDepositExpenseFormFragment_selectorField_moneyAccount"
                    hyj:style="top_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    hyj:editTextBorder="none"
                    hyj:hintText="@string/moneyDepositExpenseFormFragment_editText_hint_moneyAccount"
                    hyj:labelText="@string/moneyDepositExpenseFormFragment_textView_moneyAccount" />

                <View
                    android:id="@+id/moneyDepositExpenseFormFragment_separatorField_moneyAccount"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginBottom="5dip"
                    android:layout_marginTop="5dip"
                    android:background="@drawable/line_divider" />

                <com.hoyoji.android.hyjframework.view.HyjSelectorField
                    android:id="@+id/moneyDepositExpenseFormFragment_selectorField_project"
                    hyj:style="top_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    hyj:editTextBorder="none"
                    hyj:hintText="@string/moneyDepositExpenseFormFragment_editText_hint_project"
                    hyj:labelText="@string/moneyDepositExpenseFormFragment_textView_project" />
            </LinearLayout>

            <View
                android:id="@+id/moneyDepositExpenseFormFragment_separatorField_exchange"
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dip"
                android:background="@drawable/line_divider" />

            <LinearLayout
                android:id="@+id/moneyDepositExpenseFormFragment_linearLayout_exchangeRate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical" >

                <com.hoyoji.android.hyjframework.view.HyjNumericField
                    android:id="@+id/moneyDepositExpenseFormFragment_textField_exchangeRate"
                    hyj:style="top_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    hyj:editTextBorder="none"
                    hyj:hintText="@string/moneyDepositExpenseFormFragment_editText_hint_exchangeRate"
                    hyj:labelText="@string/moneyDepositExpenseFormFragment_textView_exchangeRate" />

                <ImageView
                    android:id="@+id/moneyDepositExpenseFormFragment_imageButton_refresh_exchangeRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_action_refresh_rotate" />
            </LinearLayout>
        </LinearLayout>

		<View
            android:id="@+id/field_separator_event"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:visibility="gone"
            android:background="@drawable/line_divider" />
        
        <com.hoyoji.android.hyjframework.view.HyjSelectorField
            android:id="@+id/moneyExpenseContainerFormFragment_selectorField_event"
            hyj:style="top_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            hyj:hintText="@string/moneyExpenseFormFragment_editText_hint_event"
            hyj:labelText="@string/moneyExpenseFormFragment_textView_event" />

        <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/line_divider" />

        <com.hoyoji.android.hyjframework.view.HyjSelectorField
            android:id="@+id/moneyDepositExpenseFormFragment_selectorField_friend"
            hyj:style="top_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            hyj:editTextBorder="none"
            hyj:hintText="@string/moneyDepositExpenseFormFragment_editText_hint_friend"
            hyj:labelText="@string/moneyDepositExpenseFormFragment_textView_friend" >
        </com.hoyoji.android.hyjframework.view.HyjSelectorField>

        <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/line_divider" />

        <ImageButton
            android:id="@id/expand_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_action_expand" />

        <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/line_divider" />
        
        <LinearLayout 
            android:id="@+id/moneyExpenseFormFragment_expandMore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            
		<com.hoyoji.android.hyjframework.view.HyjSelectorField
               android:id="@+id/projectFormFragment_selectorField_financialOwner"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               hyj:style="top_label"
               hyj:hintText="@string/projectFormFragment_editText_hint_financialOwner"
               hyj:labelText="@string/projectFormFragment_textView_financialOwner" >
           </com.hoyoji.android.hyjframework.view.HyjSelectorField>
           
        <TextView
	        android:id="@+id/projectFormFragment_textView_hint_financialOwner"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/projectFormFragment_textView_hint_financialOwner"
	        android:gravity="center"
	        android:textSize="12sp"
	        android:padding="5dp"
		    android:singleLine="true"
		    android:ellipsize="end"
	        android:background="@color/hoyoji_lightgray"
	        android:textColor="@color/gray" />
        
        <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/line_divider" />
		
		<com.hoyoji.android.hyjframework.view.HyjRemarkField
            android:id="@+id/moneyDepositExpenseFormFragment_textField_remark"
            hyj:style="top_label"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            hyj:editTextBorder="none"
            hyj:hintText="@string/moneyDepositExpenseFormFragment_editText_hint_remark"
            hyj:labelText="@string/moneyDepositExpenseFormFragment_textView_remark" />
        
        <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/line_divider" />
        
        </LinearLayout>
        
        <Button
            android:id="@id/button_save"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_rectangle"     
            android:text="@string/app_action_save" />
        
        <Button
            android:id="@id/button_delete"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_rectangle"     
            android:text="@string/app_action_delete"
            android:textColor="@color/hoyoji_red" />
    </LinearLayout>

</ScrollView>