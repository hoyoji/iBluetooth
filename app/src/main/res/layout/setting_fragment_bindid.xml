<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hyj="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".BindIDFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="vertical" >

        <com.hoyoji.android.hyjframework.view.HyjTextField
            android:id="@+id/bindIDFragment_textField_email"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            hyj:hintText="@string/bindIDFragment_editText_hint_email"
            hyj:labelText="@string/bindIDFragment_textView_email" >

                <Button
                    android:id="@+id/bindIDFragment_button_emailBinding"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
		            android:background="@drawable/button_circle_20"
		            android:textSize="16sp"
	              	android:gravity="center_horizontal|center_vertical"
                    android:text="@string/bindIDFragment_button_emailBinding" />
            </com.hoyoji.android.hyjframework.view.HyjTextField>

            <!-- <com.hoyoji.android.hyjframework.view.HyjTextField
                android:id="@+id/bindIDFragment_textField_phone"
                android:layout_width="fill_parent"
                android:layout_height="43dp"
                hyj:hintText="@string/bindIDFragment_editText_hint_phone"
                hyj:labelText="@string/bindIDFragment_textView_phone" >

                <Button
                    android:id="@+id/bindIDFragment_button_phoneBinding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
		            android:background="@drawable/round_button"
		            android:textSize="16sp"
	              android:gravity="center_horizontal|center_vertical"
                    android:text="@string/bindIDFragment_button_phoneBinding" />
            </com.hoyoji.android.hyjframework.view.HyjTextField> -->
            
            <com.hoyoji.android.hyjframework.view.HyjTextField
                android:id="@+id/bindIDFragment_textField_QQ"
                android:layout_width="fill_parent"
                android:layout_height="43dp"
                hyj:hintText="@string/bindIDFragment_editText_hint_QQ"
                hyj:labelText="@string/bindIDFragment_textView_QQ" >

                <Button
                    android:id="@+id/bindIDFragment_button_QQBinding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
		            android:background="@drawable/button_circle_20"
		            android:textSize="16sp"
	              android:gravity="center_horizontal|center_vertical"
                    android:text="@string/bindIDFragment_button_QQBinding" />
            </com.hoyoji.android.hyjframework.view.HyjTextField>
            
            <com.hoyoji.android.hyjframework.view.HyjTextField
                android:id="@+id/bindIDFragment_textField_WX"
                android:layout_width="fill_parent"
                android:layout_height="43dp"
                hyj:hintText="@string/bindIDFragment_editText_hint_WX"
                hyj:labelText="@string/bindIDFragment_textView_WX" >

                <Button
                    android:id="@+id/bindIDFragment_button_WXBinding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
		            android:background="@drawable/button_circle_20"
		            android:textSize="16sp"
	              android:gravity="center_horizontal|center_vertical"
                    android:text="@string/bindIDFragment_button_WXBinding" />
            </com.hoyoji.android.hyjframework.view.HyjTextField>
            
             <com.hoyoji.android.hyjframework.view.HyjTextField
                android:id="@+id/bindIDFragment_textField_WB"
                android:layout_width="fill_parent"
                android:layout_height="43dp"
                hyj:hintText="@string/bindIDFragment_editText_hint_WB"
                hyj:labelText="@string/bindIDFragment_textView_WB" >

                <Button
                    android:id="@+id/bindIDFragment_button_WBBinding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
		            android:background="@drawable/button_circle_20"
		            android:textSize="16sp"
	              android:gravity="center_horizontal|center_vertical"
                    android:text="@string/bindIDFragment_button_WBBinding" />
            </com.hoyoji.android.hyjframework.view.HyjTextField>
    </LinearLayout>
    
    
    
	
</ScrollView>
