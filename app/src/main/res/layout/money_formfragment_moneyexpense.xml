<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hyj="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MoneyExpenseFormFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.hoyoji.android.hyjframework.view.HyjImageField
            android:id="@+id/moneyExpenseFormFragment_imageField_picture"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/moneyExpenseFormFragment_imageView_camera"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_action_new_picture_white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:orientation="vertical"
                android:paddingLeft="66dp" >


                <com.hoyoji.android.hyjframework.view.HyjNumericField
                    android:id="@+id/moneyExpenseFormFragment_textField_amount"
                    hyj:style="no_label"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    hyj:editTextBold="true"
                    hyj:editTextBorder="none"
                    hyj:hintText="@string/moneyExpenseFormFragment_editText_hint_amount"
                    hyj:labelText="@string/moneyExpenseFormFragment_textView_amount" >

                    <requestFocus />
                </com.hoyoji.android.hyjframework.view.HyjNumericField>
                <View
                    android:id="@id/field_separator"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginBottom="5dip"
                    android:layout_marginTop="5dip"
                    android:background="@drawable/line_divider" />
                <com.hoyoji.android.hyjframework.view.HyjDateTimeField
                    android:id="@+id/moneyExpenseFormFragment_textField_date"
                    hyj:style="no_label"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    hyj:editTextBorder="none"
                    hyj:hintText="@string/moneyExpenseFormFragment_editText_hint_date"
                    hyj:labelText="@string/moneyExpenseFormFragment_textView_date" />
                
            </LinearLayout>
        </FrameLayout>

        <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/line_divider" />

            <com.hoyoji.android.hyjframework.view.HyjSelectorField
                android:id="@+id/moneyExpenseFormFragment_textField_moneyExpenseCategory"
                hyj:style="top_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                hyj:editTextBorder="none"
                hyj:hintText="@string/moneyExpenseFormFragment_editText_hint_moneyExpenseCategory"
                hyj:labelText="@string/moneyExpenseFormFragment_textView_moneyExpenseCategory" />

        <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/line_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical" >

                <com.hoyoji.android.hyjframework.view.HyjSelectorField
                    android:id="@+id/moneyExpenseFormFragment_selectorField_moneyAccount"
                    hyj:style="top_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    hyj:editTextBorder="none"
                    hyj:hintText="@string/moneyExpenseFormFragment_editText_hint_moneyAccount"
                    hyj:labelText="@string/moneyExpenseFormFragment_textView_moneyAccount" />

                <View
                    android:id="@+id/moneyExpenseFormFragment_separatorField_moneyAccount"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginBottom="5dip"
                    android:layout_marginTop="5dip"
                    android:background="@drawable/line_divider" />

                <com.hoyoji.android.hyjframework.view.HyjSelectorField
                    android:id="@+id/moneyExpenseFormFragment_selectorField_project"
                    hyj:style="top_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    hyj:hintText="@string/moneyExpenseFormFragment_editText_hint_project"
                    hyj:labelText="@string/moneyExpenseFormFragment_textView_project" />
            </LinearLayout>

            <View
                android:id="@+id/moneyExpenseFormFragment_separatorField_exchange"
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dip"
                android:background="@drawable/line_divider" />

            <LinearLayout
                android:id="@+id/moneyExpenseFormFragment_linearLayout_exchangeRate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical" >

                <com.hoyoji.android.hyjframework.view.HyjNumericField
                    android:id="@+id/moneyExpenseFormFragment_textField_exchangeRate"
                    hyj:style="top_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    hyj:editTextBorder="none"
                    hyj:hintText="@string/moneyExpenseFormFragment_editText_hint_exchangeRate"
                    hyj:labelText="@string/moneyExpenseFormFragment_textView_exchangeRate" />

                <ImageView
                    android:id="@+id/moneyExpenseFormFragment_imageButton_refresh_exchangeRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_action_refresh_rotate" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/line_divider" />

        <ImageButton
            android:id="@id/expand_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_action_expand" />

        <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/line_divider" />
        
        <LinearLayout 
            android:id="@+id/moneyExpenseFormFragment_expandMore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            
        <com.hoyoji.android.hyjframework.view.HyjRemarkField
            android:id="@+id/moneyExpenseFormFragment_textField_remark"
            hyj:style="no_label"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            hyj:editTextBorder="none"
            hyj:hintText="@string/moneyExpenseFormFragment_editText_hint_remark"
            hyj:labelText="@string/moneyExpenseFormFragment_textView_remark" />

        <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/line_divider" />

       <com.hoyoji.android.hyjframework.view.HyjSelectorField
           android:id="@+id/moneyExpenseFormFragment_selectorField_friend"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           hyj:hintText="@string/moneyExpenseFormFragment_editText_hint_friend"
           hyj:labelText="@string/moneyExpenseFormFragment_textView_friend" >
       </com.hoyoji.android.hyjframework.view.HyjSelectorField>
                
       <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/line_divider" />
                        
        <com.hoyoji.android.hyjframework.view.HyjSelectorField
            android:id="@+id/projectFormFragment_selectorField_financialOwner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            hyj:hintText="@string/projectFormFragment_editText_hint_financialOwner"
            hyj:labelText="@string/projectFormFragment_textView_financialOwner" >
        </com.hoyoji.android.hyjframework.view.HyjSelectorField>
        
        <TextView
	        android:id="@+id/projectFormFragment_textView_hint_financialOwner"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/projectFormFragment_textView_hint_financialOwner"
	        android:gravity="center"
	        android:textSize="12sp"
	        android:padding="5dp"
		    android:singleLine="true"
		    android:ellipsize="end"
	        android:background="@color/hoyoji_lightgray"
	        android:textColor="@color/gray" />
           
        <View
            android:id="@id/field_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/line_divider" />
            
        </LinearLayout>
        
        <Button
            android:id="@id/button_save"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_rectangle"     
            android:text="@string/app_action_save" />

        <Button
            android:id="@id/button_delete"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_rectangle"     
            android:text="@string/app_action_delete"
            android:textColor="@color/hoyoji_red" />
    </LinearLayout>

</ScrollView>